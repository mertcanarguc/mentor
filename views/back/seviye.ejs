<% layout("layout") %>

<section class="panel col-md-6">
    <header class="panel-heading">Seviyeler</header>
    <div class="panel-body">
        <form action="/admin/seviye" method="post">
            <div class="form-group">
                <label for="Branş Adı : "></label>
                <input type="text" name="seviye" placeholder="Seviye giriniz" required class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-md btn-primary pull-right">Ekle</button>
            </div>
        </form>
        <br>
        <ul class="list-group">
            <% seviye.forEach(element => { %>
                <li class="list-group-item"><%= element.seviye %> <a href="/admin/seviye/sil/<%= element._id %>"
                    class="btn btn-danger btn-xs pull-right">SİL</a></li>
            <% }) %>
        </ul>
    </div>
</section>