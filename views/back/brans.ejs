<% layout("layout") %>

<section class="panel col-md-6">
    <header class="panel-heading">Branşlar</header>
    <div class="panel-body">
        <form action="/admin/brans" method="post">
            <div class="form-group">
                <label for="Branş Adı : "></label>
                <input type="text" name="brans" placeholder="Branş adı giriniz" required class="form-control">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-md btn-primary pull-right">Ekle</button>
            </div>
        </form>
        <br>
        <ul class="list-group">
            <% brans.forEach(element => { %>
            <li class="list-group-item"><%= element.brans %> <a href="/admin/brans/sil/<%= element._id %>"
                    class="btn btn-danger btn-xs pull-right">SİL</a> </li>
            <% }) %>
        </ul>
    </div>
</section>